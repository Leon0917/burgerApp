<div class="jumbotron">
    <h1>Eat-Da-Burger</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            {{#each burgers}}
            {{#unless this.devoured}}
            <p>{{this.name}}</p>
            <button class="updateBurger" data-id={{this.id}}>Devour it!</button>
            {{/unless}}
            {{/each}}
        </div>


        <div class="col-md-4">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burgerName">Burger Name:</label>
                    <input type="text" id="burgerName">
                </div>

                <div class="form-group">
                    <label for="burger">Devoured?</label><br>
                    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
                    <input type="radio" name="devoured" value="0"> Eaten
                </div>

                <button class="addBurger" type="submit">submit</button>
            </form>

        </div>


        <div class="col-md-4 burger-list">
            {{#each burgers}}
            {{#if this.devoured}}
            <p>{{this.name}}</p>
            <button class="deleteBurger" data-id={{this.id}}>Delete</button>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>